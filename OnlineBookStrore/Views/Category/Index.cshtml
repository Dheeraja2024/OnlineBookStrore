@model List<Category> 

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary"> CATEGORY LIST</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-striped">
	<thead>
		<tr>
			<th>CATEGORY NAME  </th>
			<th>DISPLAY ORDER </th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75  btn btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" mx-2>
								<i class="bi bi-pencil-square"></i> Edit
						</a>
					</div>
				</td>
					<td>
						<div class="w-75  btn btn-group" role="group">
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" mx-2>
								<i class="bi bi-trash3"></i> Delete
							</a>
						</div>
					</td>
			</tr>
		}
	</tbody>
	</table>
</div>